<header>
        <button class="burguer-menu"><i class="fa-solid fa-bars"></i></button>
        <img src="/images/LOGO.png" alt="" class="logo">
        <nav class="nav-bar">
            <div class="first-nav">
                <ul>
                    <li><a href="/">HOME</a></li>
                    <li><a href="/product">PRODUCTOS</a></li>
                </ul>
            </div>
            <div class="second-nav">
                <!-- /////// search ///////////-->
                <form action="/product/search" method="GET" class="search-box">
                    <input type="text" name="search" id="search">
                    <button type="submit" class="lupita"><i class="fa-solid fa-magnifying-glass"></i></button>
                </form>
                 <!-- /////// icono usuario ///////////-->    
                <% if (locals.userLog) { %>
                    <style>
                        .imgUser {
                            width: 50px;
                            height: 50px;
                            margin: auto;
                            border-radius: 50%;
                            background-image: url('/images/users/<%= userLog.img %>');
                            border: solid 1px black;
                            background-size: cover;
                        }
                    </style>
                        <button class="imgUser" onclick="window.location.href='/user/profile'">
                            
                        </button>
                <% } else { %>
                    <button onclick="window.location.href='/user/login'">
                        <i class="fa fa-user-circle" aria-hidden="true"></i>
                    </button>
                <% }  %>
                 <!-- /////// icono carrito ///////////-->
                <button onclick="window.location.href='/product/cart'">
                    <i class="fa-sharp fa-solid fa-cart-shopping"></i>
                    <span class="cart-number" style="padding: 5px;background-color: red; color:white; border-radius: 5%;">0</span>
                </button>
            </div>
        </nav>
    </header>